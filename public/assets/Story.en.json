        {
          "avatars": [
            {
              "id": "hoshina02",
              "action": "idle",
              "expression": "surprised",
              "attension": "true"
            }
          ],
          "location": "Park",
          "bgm": "main",
          "background": "park",
          "text": "",
          "items": [
            {
              "text": "..."
            },
            {
              "text": "It's a love that transcends time and space!"
            }
