        {
          "avatars": [
            {
              "id": "hoshina02",
              "action": "idle",
              "expression": "surprised",
              "attension": "true"
            }
          ],
          "location": "Park",
          "bgm": "main",
          "background": "park",
          "text": "'Didn't we just meet...?'",
          "voice": "私たち_さっき会ったばかりですよね"
