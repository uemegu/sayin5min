        },
        {
          "avatars": [
            {
              "id": "hoshina02",
              "action": "idle",
              "expression": "normal",
              "attension": "true"
            }
          ],
          "location": "Park",
          "bgm": "main",
          "background": "park",
          "text": "'Have we met somewhere before...?'",
          "voice": "どこかでお会いしてましたか"
        },
        {
          "avatars": [
            {
              "id": "hoshina02",
              "action": "idle",
              "expression": "normal",
              "attension": "true"
            }
          ],
          "location": "Park",
          "bgm": "main",
          "background": "park",
          "text": "",
          "items": [
            {
              "text": "..."
            },
            {
              "text": "We met 5 seconds ago..."
